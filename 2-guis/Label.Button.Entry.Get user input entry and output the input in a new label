
from tkinter import *

test = Tk()

def Hello():
    b = a.get()
    test3_label = Label(text= b, fg="pink", bg="green", font=10).pack()

def Delete():
    c = a.get()
    test1_label = Label(text= c, fg="yellow", bg="green", font=10).pack()
    

a = StringVar()
test.title("Test")
test.geometry("300x300")
test_label = Label(text="Test", font="Arial 18", fg="green", bg="yellow",
                   relief= SUNKEN, padx="100")
test1_label = Label(text="Yaya", font="Arial 18", fg="red", bg="yellow",
                   relief = RIDGE, padx="100")

button_one = Button(text="Enter", fg="red", bg="pink", width="5",
                    command = Hello).pack()
button_two = Button(text="Delete", fg="blue", bg="teal", width="5",
                    command = Delete).pack()
text = Entry(textvariable = a).pack()

test_label.pack()
test1_label.pack(side = BOTTOM)

test.mainloop()
